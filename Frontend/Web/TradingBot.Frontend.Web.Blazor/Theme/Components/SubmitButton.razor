@inherits SubmitButtonRazor


<MudButton Style="@Style" Size="Size.Large" Disabled="@Processing" ButtonType="@ButtonType" Variant="Variant" Color="Color" Class="@Class" FullWidth="FullWidth" OnClick="Click">
    @if (Processing)
    {
        <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true"/>
        <MudText Class="ms-2">@Localizer[ProcessingText]</MudText>
    }
    else
    {
        <MudText>@Localizer[Text]</MudText>
    }
</MudButton>