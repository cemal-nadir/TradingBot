@using System.Globalization
@inherits ProfileMenuRazor

	<MudNavMenu Color="Color.Info">
		
		<MudText Typo="Typo.h6" Class="px-4 mt-1">@Claims?.Name</MudText>
		<MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">@Claims?.Email</MudText>
		<MudDivider Class="my-2"/>
		
    
		<MudNavGroup Title="@Localizer["MySettings"]" Class="mt-2" Icon="@Icons.Material.Filled.Settings" Expanded="true">
			<MudNavLink Href="/settings/my-profile">@Localizer["MyProfile"]</MudNavLink>
			<MudNavLink Href="/settings/change-my-password">@Localizer["ChangeMyPassword"]</MudNavLink>
		</MudNavGroup>
		<MudDivider Class="my-2"/>
		<MudText Typo="Typo.body2" Class="px-4 mud-text-secondary italic">@Localizer["Languages"]</MudText>

		<MudNavGroup Title="@CultureInfo.CurrentCulture.DisplayName" Icon="@Icons.Material.Rounded.Language">
			@foreach (var culture in SupportedCultures)
			{
				<MudNavLink OnClick="@(() => ChangeCulture(culture))" Icon="@(CultureInfo.CurrentCulture.Name == culture.Name ? Icons.Material.Filled.Check : "")">
					@culture.DisplayName
				</MudNavLink>
			}
		</MudNavGroup>
		<MudDivider Class="my-2"/>
		<MudNavLink OnClick="Logout" Icon="@Icons.Material.Filled.Logout">@Localizer["Logout"]</MudNavLink>
	</MudNavMenu>
