@using Variant = MudBlazor.Variant
@inherits SelectListDialogRazor
@attribute [Authorize]
<MudDialog>
    <DialogContent>
        <MudPaper Width="100%" Height="180px" Class="pa-3" Elevation="0">
            <MudSelect T="string" Clearable="true" Required="true" Class="mt-5" AnchorOrigin="Origin.BottomCenter" Variant="Variant.Text"
                       @bind-Value="@Value" RequiredError="@Localizer["Required"]" Placeholder="@Localizer[Placeholder]">
                @foreach (var item in Items)
                {
                    <MudSelectItem Value="@item.Id">@item.Description</MudSelectItem>
                }
            </MudSelect>
        </MudPaper>
    </DialogContent>
    <DialogActions>
        <MudButton Color="@Color" Variant="Variant.Filled" OnClick="Submit" StartIcon="@Icon">@ButtonText</MudButton>
    </DialogActions>
</MudDialog>